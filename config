font xft:Inconsolata bold 8.5
new_window pixel 2

set $blue #003366
set $gray1 #444444
set $gray2 #111111

client.focused            #000000   $gray1   #FFFFFF   #222222
client.focused_inactive   #000000   $gray1   #FFFFFF   #222222
client.unfocused          #000000   $gray2   #FFFFFF   #000000

# use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

# start a terminal
bindsym Mod4+Shift+Return exec urxvtc

# kill focused window
bindsym Mod4+Shift+c kill

# start dmenu (a program launcher)
bindsym Mod4+p exec dmenu_run -nb black

# screen lock
bindsym Control+Mod4+l exec slimlock

# change focus
bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right

# move focused window
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

# split in horizontal orientation
bindsym Mod4+v split h

# split in vertical orientation
bindsym Mod4+g split v

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen

# change container layout (tabbed, toggle split)
bindsym Mod4+n layout tabbed
bindsym Mod4+m layout toggle split

# toggle tiling / floating
bindsym Mod4+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

# focus the child container
#bindsym Mod4+d focus child

# switch to last workspace
bindsym Mod4+6 workspace back_and_forth

# switch to workspace
bindsym Mod4+q workspace 1: q
bindsym Mod4+w workspace 2: w
bindsym Mod4+e workspace 3: e
bindsym Mod4+r workspace 4: r
bindsym Mod4+t workspace 5: t
bindsym Mod4+y workspace 6: y
bindsym Mod4+u workspace 7: u
bindsym Mod4+i workspace 8: i
bindsym Mod4+o workspace 9: o

# move focused container to workspace
bindsym Mod4+Shift+q move container to workspace 1: q
bindsym Mod4+Shift+w move container to workspace 2: w
bindsym Mod4+Shift+e move container to workspace 3: e
bindsym Mod4+Shift+r move container to workspace 4: r
bindsym Mod4+Shift+t move container to workspace 5: t
bindsym Mod4+Shift+y move container to workspace 6: y
bindsym Mod4+Shift+u move container to workspace 7: u
bindsym Mod4+Shift+i move container to workspace 8: i
bindsym Mod4+Shift+o move container to workspace 9: o

bindsym Mod4+z reload
bindsym Mod4+Shift+x restart
bindsym Mod4+Shift+z exit

mode "resize" {
        bindsym h           resize shrink width 10 px or 10 ppt
        bindsym j           resize grow height 10 px or 10 ppt
        bindsym k           resize shrink height 10 px or 10 ppt
        bindsym l   resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym q mode "default"
        bindsym Escape mode "default"
}

bindsym Mod4+x mode "resize"

# multimedia keys
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '3%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '1%-'"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle"

bindsym XF86AudioPlay exec "mpc toggle"
bindsym XF86AudioStop exec "mpc stop"
bindsym XF86AudioNext exec "mpc next"
bindsym XF86AudioPrev exec "mpc next"

bindsym XF86Display exec "arandr"
bindsym XF86KbdBrightnessDown exec "sudo /opt/kbdlight/bin/kbdlight -"
bindsym XF86KbdBrightnessUp exec "sudo /opt/kbdlight/bin/kbdlight +"
bindsym XF86TouchpadToggle exec "synclient TouchpadOff=$(synclient | awk '/TouchpadOff/ {print ($3+1)%2}')"

bindsym Mod4+a exec "urxvtc -e alsamixer"
bindsym Mod4+Shift+a exec "pavucontrol"

bar {
	position top
        status_command ~/.i3/conky
	colors { 
		statusline #AAAAAA
		background #000000
		focused_workspace #666666 $blue #FFFFFF
	}
}

